{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",

        "module": "CommonJS",
        "target": "ES2022",
        "moduleResolution": "node",

        "strict": true,
        "esModuleInterop": true,

        "lib": ["ES2022"],
        "types": ["node"],

        "sourceMap": true,

        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}
